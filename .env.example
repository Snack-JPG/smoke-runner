# Smoke Runner Environment Configuration

# Application Settings
BASE_URL=http://localhost:3000
PROJECT_ROOT=./app

# Development
DEV_START=pnpm --filter app dev
# DEV_START=npm run dev
# DEV_START=yarn dev

# Test Configuration
SMOKE_CONCURRENCY=4
ROUTE_LIMIT=20
TIMEOUT=30000
RETRIES=2

# Authentication (choose one)
AUTH_MODE=none
# AUTH_MODE=cookie
# AUTH_MODE=magic_link  
# AUTH_MODE=basic
# AUTH_MODE=oauth_token

# Cookie Authentication
# AUTH_COOKIE=sessionToken=your-test-session-token; Path=/

# Magic Link Authentication
# MAGIC_LINK_PATH=/auth/magic-link?token=test-token-123

# Basic Authentication
# BASIC_AUTH_USERNAME=testuser
# BASIC_AUTH_PASSWORD=testpass

# OAuth Token Authentication
# OAUTH_TOKEN=your_bearer_token_here

# Visual Regression Testing
VISUAL=false

# Reporting & Notifications
SMOKE_SLACK_WEBHOOK=
# SMOKE_SLACK_WEBHOOK=https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXXXXXXXXXXXXXX

# Test Data Seeding (optional)
DB_TYPE=prisma
# DB_TYPE=supabase
# DB_TYPE=postgresql
# DB_TYPE=mysql
# DB_TYPE=sqlite

# Database Configuration
DATABASE_URL=
# DATABASE_URL=postgresql://user:pass@localhost:5432/dbname

# Supabase Configuration
SUPABASE_URL=
SUPABASE_ANON_KEY=

# API Configuration
API_URL=
API_KEY=

# CI/CD Configuration
LHCI_GITHUB_APP_TOKEN=
VERCEL_TOKEN=
VERCEL_PROJECT_ID=